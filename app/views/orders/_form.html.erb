<div class="row">
  <div class="col-md-6">
    <div class="thumbnail">
      <%= image_tag(@box.image.url(:large)) %>
      <div class="caption center">
        <h3><%= @box.title %></h3>
        <p><%= @box.description %></p>
        <p><%= @box.price %></p>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <%= form_for([@box, @order]) do |f| %>
      <% if @order.errors.any? %>
        <div id="error_explanation" class="alert alert-danger alert-dismissable">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <h4><%= pluralize(@order.errors.count, "error") %> prohibited this order from being processed:</h4>
          <ul>
          <% @order.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="row">
        <div class="col-md-8">
          <div class="form-group">
            <%= f.label :address %><br>
            <%= f.text_field :address, class: "form-control" %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <%= f.label :city %><br>
            <%= f.text_field :city, class: "form-control" %>
          </div>
        </div>
      </div>  
      <div class="row">
        <div class="col-md-4">
          <div class="form-group">
            <%= f.label :state %><br>
            <%= f.text_field :state, class: "form-control" %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <%= f.label :province %><br>
            <%= f.text_field :province, class: "form-control" %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <%= f.label :ZIP_code %><br>
            <%= f.text_field :ZIP_code, class: "form-control" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="form-group center">
            <%= f.submit "Complete Order", class: "btn btn-primary btn-danger" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>