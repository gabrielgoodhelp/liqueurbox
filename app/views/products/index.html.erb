<h3>The products inside the box of the month are:</h3>

<div class="row">
  <% @products.each do |product| %>
  <div class="col-sm-6 col-md-6">
    <div class="thumbnail">
      <%= link_to image_tag(product.image.url(:medium)), product %>
      <div class="caption center">
        <h3><%= product.title %></h3>
        <p><%= product.producer %></p>
        <p class='center'><%= link_to "Discover More", product, class: 'btn btn-default' %> <%= link_to "Go to Box", boxes_path, class: 'btn btn-default btn-danger' %></p>
      </div>
    </div>
  </div>
  <% end %>
</div>
